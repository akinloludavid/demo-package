{
  "name": "@ak/demo",
  "version": "1.0.0",
  "description": "a set of utility functions created by ak",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "lint": "tsc"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/akinloludavid/demo-package.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "utils",
    "react"
  ],
  "author": "ak money",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akinloludavid/demo-package/issues"
  },
  "homepage": "https://github.com/akinloludavid/demo-package#readme",
  "type": "module",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}